<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="$(ApplicationID)$" version="$(ApplicationVersion)$" versionCode="1">
	<!-- Find configuration details for this file here : http://docs.build.phonegap.com/ -->
    
	<!-- Available template variables, replaced before build by Convertigo -->	
	<!-- $(ApplicationID)$ : the unique identifier for your application. To support all supported platforms, this *must* be reverse-domain name style (e.g. 'com.yourcompany.yourapp') -->
	<!-- $(ApplicationVersion)$ : for best results, use a major/minor/patch style version, with three numbers, such as '0.0.1'-->
	<!-- $(ApplicationName)$ : the name of the application -->
	<!-- $(ApplicationDescription)$ : a description for your application -->
	<!-- $(ApplicationAuthorName)$ : your name -->
	<!-- $(ApplicationAuthorEmail)$ : your email -->
	<!-- $(ApplicationAuthorWebsite)$ : your website -->
	<!-- $(PlatformName)$ : current platform name -->
	<!-- $(PlatformType)$ : current platform's target os -->
    
	<!-- This name is also the application name on your device -->
	<name>$(ApplicationName)$</name>

	<description>$(ApplicationDescription)$</description>

	<author href="$(ApplicationAuthorWebsite)$" email="$(ApplicationAuthorEmail)$">$(ApplicationAuthorName)$</author>
	 
	<gap:platform name="android"/>
	
	<!-- Customize your app and platform with the preference element. -->
    <preference name="phonegap-version"           value="cli-5.1.1" />      <!-- all: current version of PhoneGap -->
    <preference name="orientation"                value="default" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="target-device"              value="universal" />      <!-- all: possible values handset, tablet, or universal -->
    <preference name="fullscreen"                 value="false" />          <!-- all: hides the status bar at the top of the screen -->
    <preference name="SplashScreen"    			  value="splash" />         <!-- all: the splash screen resource if built without phonegap build -->
    <preference name="SplashScreenDelay"          value="60000" />          <!-- android: sets the default delay of how long the splashscreen appears in milliseconds, this should be the maximum expected start time -->
    <preference name="android-minSdkVersion"      value="10" />             <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
    
	<!-- Mandatory preferences for FlashUpdate service -->
	<preference name="AndroidPersistentFileLocation" value="Internal" />
	
	<icon src="icon.png"/>
	
	<!-- Android icons -->
	<icon src="res/icon/icon36ldpi.png"   gap:platform="android" gap:qualifier="ldpi" />
    <icon src="res/icon/icon48mdpi.png"   gap:platform="android" gap:qualifier="mdpi" />
    <icon src="res/icon/icon72hdpi.png"   gap:platform="android" gap:qualifier="hdpi" />
    <icon src="res/icon/icon96xhdpi.png"  gap:platform="android" gap:qualifier="xhdpi" />
<!--     <icon src="res/icon/android/icon144xxhdpi.png"  gap:platform="android"    gap:density="xxhdpi" /> -->
	
	<gap:splash src="splash.png" />
	
	<!-- Android splash -->
	<gap:splash src="res/splash/ldpi.png"  gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="res/splash/mdpi.png"  gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="res/splash/hdpi.png"  gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="res/splash/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    <gap:splash src="res/splash/landscape-ldpi.png" gap:platform="android" gap:qualifier="land-ldpi" />
	<gap:splash src="res/splash/landscape-mdpi.png" gap:platform="android" gap:qualifier="land-mdpi" />
	<gap:splash src="res/splash/landscape-hdpi.png" gap:platform="android" gap:qualifier="land-hdpi" />
	<gap:splash src="res/splash/landscape-xhdpi.png" gap:platform="android" gap:qualifier="land-xhdpi" />
    
	
	<!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires. -->
	<preference name="permissions" value="none"/>
	
    <!-- Core plugins mandatory for FlashUpdate service -->
    <gap:plugin name="cordova-plugin-device" source="npm" />
    <gap:plugin name="cordova-plugin-file" source="npm" />
    <gap:plugin name="cordova-plugin-file-transfer" source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    
	<!-- Useful for debugging -->
	<gap:plugin name="cordova-plugin-console" source="npm" />

	<!-- Native plugin for fullsync project that speedup indexing of documents -->
	<gap:plugin name=" couchbase-lite-phonegap-plugin" source="npm" />
    
	<!-- Other optional Core plugins, comment them out (ctrl+shit+c) if you want to reduce the package size and permissions -->
