@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html {
	@apply h-full bg-surface-50-950;
}
body {
	@apply h-full;
}

@layer base {
	/*TABLES STYLE*/

	table {
		width: 100%;
		border-collapse: collapse;
		border: 4px;
		@apply rounded overflow-hidden;
	}
	th,
	td {
		padding: 0;
		text-align: left;
		font-weight: 300;
		font-size: 15px;
		@apply align-middle p-2 !important;
	}
	th {
		@apply preset-filled-surface-200-800 font-bold;
	}
	thead {
		@apply border-surface-900-100 border-b-[0.5px];
	}

	tr:nth-child(even) {
		@apply bg-surface-200-800 hover:bg-opacity-40;
	}

	tr:nth-child(odd) {
		@apply bg-surface-300-700 hover:bg-opacity-40;
	}
	/* END TABLES STYLE*/
}

@layer components {
	.button {
		@apply btn text-[13px] font-normal py-1 px-3 flex items-center rounded text-white;
	}

	.basic-button {
		@apply button dark:bg-primary-500 bg-primary-500;
	}

	.cancel-button {
		@apply button dark:bg-surface-500 bg-surface-400;
	}

	.delete-button {
		@apply button dark:bg-error-500 bg-error-600;
	}

	.yellow-button {
		@apply button dark:bg-tertiary-600 bg-tertiary-500;
	}

	.green-button {
		@apply button bg-success-500 dark:bg-success-600;
	}

	.violet-button {
		@apply button bg-pale-violet bg-opacity-50;
	}

	.btnStyle {
		@apply btn text-[13px] font-normal py-1 px-3 gap-3 flex items-center rounded;
	}

	.input-button {
		@apply text-[13px] font-normal py-1 px-3 text-center flex items-center justify-center rounded text-white dark:bg-primary-500 bg-primary-500;
	}

	/*INPUT STYLES !!*/

	/**style for label*/
	.label-common {
		@apply text-[14px] cursor-pointer;
	}
	/**Style for Input*/
	.input-common {
		@apply placeholder:text-[16px] w-full placeholder:dark:text-surface-500 placeholder:text-surface-200 placeholder:font-light font-normal border-none dark:bg-surface-800 rounded;
	}

	.select-common {
		@apply placeholder:text-[12px] placeholder:dark:text-surface-500 placeholder:text-surface-200 placeholder:font-light font-normal border-none dark:bg-surface-800 rounded;
	}
	.input-common-dash {
		@apply placeholder:text-[16px] placeholder:dark:text-surface-500 placeholder:text-surface-200 placeholder:font-light font-normal border-[0.5px] dark:border-surface-600 border-surface-200 dark:bg-surface-800 rounded;
	}
	.input-text {
		@apply mt-1 pl-4 text-[16px] text-surface-800-200;
	}
	/**Style for checkbox*/
	.checkbox-common {
		@apply cursor-pointer;
	}
	.border-common {
		@apply border-b-[1px] dark:border-surface-600 border-surface-50;
	}
	.input-name {
		@apply font-light text-[14px] mb-3;
	}
	/* END INOUT STYLES */

	/*FORM STYLE*/
	form {
		@apply rounded;
	}

	.gray-button {
		@apply bg-surface-200 dark:bg-surface-500;
	}

	.confirm-button {
		@apply bg-primary-400-600;
	}

	/*END FORM STYLE*/
}

@layer utilities {
	.align {
		@apply align-middle;
	}

	/**SLIDE TOGGLE */

	.activeSlideToggle {
		@apply min-w-12 bg-success-400 dark:bg-success-600;
	}

	.unActiveSlideToggle {
		@apply min-w-12 bg-error-400 dark:bg-error-600;
	}

	/*RESPONSIVE*/
	.hide-md {
		@apply max-md:hidden;
	}

	.show-md {
		@apply md:hidden;
	}
	/*END RESPONSIVE*/

	.border-color {
		@apply border-surface-300-700;
	}

	.preset-filled-error {
		@apply preset-filled-error-500;
	}

	.layout-cols-2 {
		@apply grid grid-cols-1 lg:grid-cols-2 justify-items-stretch gap;
	}
}
